{
    "openapi": "3.0.0",
    "info": {
        "title": "Leitner System API",
        "version": "1.0.0",
        "description": "API for the Leitner Flashcard System"
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/cards/{cardId}/answer": {
            "post": {
                "summary": "Answer a card",
                "parameters": [
                    {
                        "in": "path",
                        "name": "cardId",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "userAnswer": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "userAnswer"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "The result of the answer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "cardId": {
                                            "type": "string"
                                        },
                                        "isCorrect": {
                                            "type": "boolean"
                                        },
                                        "newCategory": {
                                            "type": "integer"
                                        },
                                        "correctAnswer": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Card not found"
                    },
                    "400": {
                        "description": "Invalid input"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        }
    }
}